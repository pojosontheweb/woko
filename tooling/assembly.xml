<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/scripts</directory>
            <includes>
                <include>woko</include>
                <include>woko.bat</include>
            </includes>
            <outputDirectory>woko/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/doc</directory>
            <includes>
                <include>*.txt</include>
            </includes>
            <outputDirectory>woko</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>woko/lib</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>woko/lib</outputDirectory>
            <includes>
                <include>org.codehaus.groovy:groovy-all</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>