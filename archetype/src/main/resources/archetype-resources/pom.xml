<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!--~~~~~~~~~~~~~~~~~~~~~-->
    <!-- Project information -->
    <!--~~~~~~~~~~~~~~~~~~~~~-->
    <artifactId>${artifactId}</artifactId>
    <groupId>${groupId}</groupId>
    <name>${artifactId}</name>
    <version>${version}</version>
    <packaging>war</packaging>

    <properties>
        <woko.version>2.1</woko.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <!--~~~~~~~~~~~~~~-->
    <!-- Dependencies -->
    <!--~~~~~~~~~~~~~~-->
    <dependencies>

        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
        <!-- Defaults dependencies needed to use woko -->
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

        <!--
            the Woko Reference Implementation dep : will grab all the
            "full defaults" stack :
              * hibernate/compass object store
              * database user manager
              * built-in authentication
        -->
        <dependency>
            <groupId>com.pojosontheweb</groupId>
            <artifactId>woko-ri</artifactId>
            <version>${woko.version}</version>
        </dependency>

        <!--
            Woko built-in authentication JSPs
        -->
        <dependency>
            <groupId>com.pojosontheweb</groupId>
            <artifactId>woko-builtin-auth-web</artifactId>
            <version>${woko.version}</version>
            <type>war</type>
        </dependency>

        <!--
            Woko push : enables /push in your webapp
        -->
        <dependency>
            <groupId>com.pojosontheweb</groupId>
            <artifactId>woko-push</artifactId>
            <version>${woko.version}</version>
        </dependency>

        <!--
            client-side dependency on the tooling module : this is
            used to run the woko[.bat] command line script
        -->
        <dependency>
            <groupId>com.pojosontheweb</groupId>
            <artifactId>woko-tooling</artifactId>
            <version>${woko.version}</version>
        </dependency>
        <!--
            this is needed for running the tooling module, but
            we we exclude it from the generated war (see below)
        -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.3</version>
        </dependency>
    </dependencies>

    <!--~~~~~~~~~~~~~~~~~~~~~-->
    <!-- Build configuration -->
    <!--~~~~~~~~~~~~~~~~~~~~~-->
    <build>
        <finalName>${artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.10</version>
                <configuration>
                    <scanIntervalSeconds>10</scanIntervalSeconds>
                    <!-- Configure the webapp -->
                    <contextPath>/${artifactId}</contextPath>
                    <tmpDir>target/tmp</tmpDir>
                    <stopKey>foo</stopKey>
                    <stopPort>9999</stopPort>
                    <requestLog implementation="org.mortbay.jetty.NCSARequestLog">
                        <filename>target/yyyy_mm_dd.request.log</filename>
                        <retainDays>90</retainDays>
                        <append>true</append>
                        <extended>false</extended>
                        <logTimeZone>GMT</logTimeZone>
                    </requestLog>
                </configuration>
            </plugin>
            <!--
                We exclude the servlet API jar that tooling requires, we
                don't want this in our war !
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <warSourceExcludes>WEB-INF/lib/servlet-api*.jar</warSourceExcludes>
                </configuration>
            </plugin>
            <!--
                The Woko plugin (environments etc.)
            -->
            <plugin>
                <groupId>com.pojosontheweb</groupId>
                <artifactId>woko-maven-plugin</artifactId>
                <version>${woko.version}</version>
                <executions>
                    <execution>
                        <id>woko.environment</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>env</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
